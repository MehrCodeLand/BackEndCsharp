@using Core.DTOs
@model ForgotPasswordViewModel
@{
    Layout = null;
}
<h2>Forgot Pasword</h2>

<p>Enter Your Email Adrres First</p>
<form asp-area="Users" asp-controller="UserHome" asp-action="ForgotPassword" method="post">
    <div class="input-group">
        <span class="input-group-addon" id="username"></span>
        <input asp-for="Email" type="text" class="form-control" placeholder="Email" />
    </div>

    <span asp-validation-for="Email"></span>
    <button class="btn btn-success">Send Me Email!</button>
</form>